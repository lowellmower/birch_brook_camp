
<p id="notice"><%= notice %></p>

<div class="conatiner">
  <div class="container session-title">
    <h1>Upcoming Sessions</h1>
  </div>
  <div class="container session-subtitle">
    <h4>Below are our upcoming sessions for the summer of 2016. Please <a href="/#contact">contact us</a> if you have any questions or would like to joins us for one of these dates.</h4>
  </div>
</div>

<hr style="margin-left: 50px; margin-right: 50px;"><br>

<div class="container session-cards-container">
  <div class="row">
    <div class="col-md-4 col-md-offset-1 text-center">
      <div class="session-card">
        <h2 class="session-card-title">Session 1</h2>
        <hr style="margin-left: 5%; margin-right: 5%;">
      </div>
    </div>
    <div class="col-md-4 col-md-offset-1 text-center">
      <div class="session-card">
        <h2 class="session-card-title">Session 2</h2>
        <hr style="margin-left: 5%; margin-right: 5%;">
      </div>
    </div>
  </div>
</div>


<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sessions.each do |session| %>
      <tr>
        <td><%= link_to 'Show', session %></td>
        <td><%= link_to 'Edit', edit_session_path(session) %></td>
        <td><%= link_to 'Destroy', session, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

